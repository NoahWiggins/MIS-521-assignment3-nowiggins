@model MIS_521_assignment3_nowiggins.Models.Actor

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorGender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorGender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorAge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorAge)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorIMDBHyperlink)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ActorIMDBHyperlink))
            {
                <a href="@Model.ActorIMDBHyperlink" target="_blank">Visit IMDB Website</a>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorPhoto)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.ActorPhoto != null && Model.ActorPhoto.Length != 0)
            {
                <img height="200" src="@Url.Action("GetActorPhoto", "Actors", new {Model.ActorId})" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
